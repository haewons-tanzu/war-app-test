    <!-- error 페이지 -->
    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/views/error/400error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/views/error/403error.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/WEB-INF/views/error/405error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/views/error/defaultError.jsp</location>
    </error-page>
    
    <session-config>
        <session-timeout>50000</session-timeout>
    </session-config>
	
	<distributable/>

